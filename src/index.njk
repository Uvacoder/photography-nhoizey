<section class="topics">
  {% set sub_galleries = collections.galleries | sub_galleries(page.url) %}
  <ul class="galleries">
    {% for item in sub_galleries %}
      <li>
        <figure>
          {% set photos_below = collections.photos_in_galleries | photos_here_and_below(item.url) | shuffle | limit(3) %}
          <div class="frame">
            <div class="diaporama diaporama__{{ photos_below | length }}">
              {% for photo in photos_below %}
                <img src="/photos/{{ photo.data.page.fileSlug }}/{{ photo.data.page.fileSlug }}.jpg" alt="" width="{{ photo.data.origin.data.dimensions.width }}" height="{{ photo.data.origin.data.dimensions.width }}" data-responsiver="diaporama" />
              {% endfor %}
            </div>
          </div>
          <figcaption><a href="{{ item.url }}" class="icon icon--folder">{{ item.data.title }}</a></figcaption>
        </figure>
      </li>
    {% endfor %}
  </ul>
</section>

<section class="latest">
  <p>Here are my latest photos:</p>

  {% from "macros/photo.njk" import photo %}

  <ul class="gallery">
    {% for item in collections.photos_in_galleries | limit(6) %}
      {{ photo(item) }}
    {% endfor %}
  </ul>
</section>
