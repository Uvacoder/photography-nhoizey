{% extends "./_layouts/base.njk" %}

{% block content %}
  <h1>{{Â title }}</h1>

  {% from "macros/css.njk" import css %}
  {{ css('components/tagscloud', build.env) }}

  {% from "macros/tagscloud.njk" import tagscloud %}

  <p class="lead">These are the tags used in all photos.</p>

  <section id="dynamic" style="display: none">
    <p id="current"></p>
    <input type="range" id="mintags" min="1" max="100" step="1" value="25" style="width: 100%" />
  </section>

  {{ tagscloud(collections.tags) }}

  <script>
  const rangeInput = document.querySelector('#mintags');
  const currentLabel = document.querySelector('#current');

  let max = 0;
  const tags = document.querySelectorAll('[data-number]');
  tags.forEach((tag) => {max = Math.max(max, parseInt(tag.dataset.number, 10));});
  rangeInput.max = max;

  const updateLabel = () => {
    let currentValue = rangeInput.value;
    currentLabel.innerText = `Currently showing tags used with at least ${currentValue} photo${currentValue > 1 ? 's' : ''}:`;
    tags.forEach((tag) => {
      tag.style.display = parseInt(tag.dataset.number, 10) >= currentValue ? 'inline-block' : 'none';
    });
  }

  rangeInput.addEventListener('input', updateLabel);
  updateLabel();

  document.querySelector('#dynamic').style.display = 'block';
  </script>


{% endblock %}



