{% from "macros/meta.njk" import meta %}

{% macro photo(item) %}
  <li>
    <figure>
      <img src="/photos/{{ item.data.page.fileSlug }}/{{ item.data.page.fileSlug }}.jpg" alt="{{ item.data.title }}" />
      <figcaption>
        <a href="{{ item.url }}">{{ item.data.title }}</a>
        {{ meta(item) }}
      </figcaption>
    </figure>
  </li>
{% endmacro %}
