{% macro css(stylesheet, env) %}
  {% if env == 'production' %}
    {% set criticalCss %}{% include_raw "_site/ui/css/" + stylesheet + ".css" %}{% endset %}
    <style>
      {{criticalCss | replace('/*# sourceMappingURL=', '/*# sourceMappingURL=/ui/css/') | safe}}
    </style>
  {% else %}
    <link rel="stylesheet" href="/ui/css/{{ stylesheet }}.css" />
  {% endif %}
{% endmacro %}
