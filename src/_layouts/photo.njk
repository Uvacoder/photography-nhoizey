---
layout: page
---

{% set photoPath = 'src' + page.filePathStem | replace('index', '') + photo %}
{{ exif | dump }}
{% from "macros/css.njk" import css %}
{{ css('components/photo', build.env) }}
<div class="photo{% if dimensions.width < dimensions.height %} portrait{% endif %}" style="--ratio: {{ dimensions.width / dimensions.height }}">
  <header>
    <ul class="breadcrumb">
      <li><a href="/">Home</a></li>
    </ul>
    <h1>{{ title }}</h1>
  </header>

  <img src="{{ page.fileSlug }}.jpg" alt="{{ title }}" width="{{ dimensions.width }}" height="{{ dimensions.height }}" />

  {% from "macros/meta.njk" import meta %}
  {{ meta(page, location) }}

  <div class="description">
    {{ content | safe }}
  </div>

  <ul class="exif">
    <li class="icon icon--camera">{{ gear.make }} {{ gear.model }}{% if gear.lens %} + {{ gear.lens }}{% endif %}</li>
    {% if settings.focal_length %}<li class="icon icon--focal-length">{{ settings.focal_length }} mm{% if settings.focal_length_35mm %} (eq {{ settings.focal_length_35mm }} mm){% endif %}</li>{% endif %}
    {% if settings.iso %}<li class="icon icon--iso">ISO {{ settings.iso }}</li>{% endif %}
    {% if settings.aperture %}<li class="icon icon--aperture">ƒ/{{ settings.aperture }}</li>{% endif %}
    {% if settings.exposure_time_fraction %}<li class="icon icon--exposition">{{ settings.exposure_time_fraction }} s</li>{% endif %}
    {% if geo.latitude and geo.longitude %}<li class="icon icon--location">lat: {{ geo.latitude }}<br />long: {{ geo.longitude }}</li>{% endif %}
  </ul>
  {% if tags %}<p class="keywords icon icon--tag">{{ tags | join(", ") }}</p>{% endif %}
</div>
