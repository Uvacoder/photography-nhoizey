---
layout: page
---

{% set photoPath = 'src' + page.filePathStem | replace('index', '') + photo %}
{% set exifData = photoPath | exif %}

{% from "macros/css.njk" import css %}
{{ css('components/photo', build.env) }}
<div class="photo {{ ratio or 'landscape' }}">
  <header>
    {% set breadcrumb = collections.galleries | breadcrumb(page.url) %}
    <ul class="breadcrumb">
      <li><a href="/">Home</a></li>
      {% for item in breadcrumb %}
        <li><a href="{{ item.url }}">{{ item.data.title }}</a></li>
      {% endfor %}
    </ul>
    <h1>{{ title }}</h1>
  </header>

  <img src="{{ photo }}" alt="{{ title }}" />

  {% from "macros/meta.njk" import meta %}
  {{ meta(page, location) }}

  <div class="description">
    {{ content | safe }}
    {{ exifData.ImageDescription | safe }}

    <ul class="exif">
      <li class="icon icon--camera">{{ exifData.Make }} {{ exifData.Model }}{% if exifData.LensModel %} + {{ exifData.LensModel }}{% endif %}</li>
      {% if exifData.ISO %}<li class="icon icon--iso">ISO {{ exifData.ISO }}</li>{% endif %}
      {% if exifData.FNumber %}<li class="icon icon--aperture">ƒ/{{ exifData.FNumber }}</li>{% endif %}
      {% if exifData.ExposureTimeFraction %}<li class="icon icon--exposition">{{ exifData.ExposureTimeFraction }} s</li>{% endif %}
    </ul>
  </div>
</div>
<script>

</script>
