<!DOCTYPE html>
<html lang="{{ lang }}">
  <head>
    {% include "head.njk" %}
  </head>

  <body
    data-img-src="{{ page.inputPath | dirname }}/"
    data-img-dist="{{ page.outputPath | dirname }}/"
  >
    <header role="banner">
      {% include 'components/logo.njk' %}
      {% include 'components/navigation.njk' %}
    </header>
    <div class="page">
      <main id="main" role="main">
        {% block content %}
          {{ content | safe }}
        {% endblock %}
      </main>
      {% include 'components/footer.njk' %}
    </div>

    {% from "macros/js.njk" import js %}
    {{ js('additional', build.env) }}
  </body>

</html>
