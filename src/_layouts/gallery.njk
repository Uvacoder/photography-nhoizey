---
layout: page
---

{{ content | safe }}

{% set subgalleries = collections.galleries | subgalleries(page.url) %}

{% if subgalleries | length %}

<h2>Galleries</h2>

<ul>
  {% for item in subgalleries %}
    <li><a href="{{ item.url }}">{{ item.data.title }}</a></li>
  {% endfor %}
</ul>
{% endif %}

{% set photos_here = collections.photos | photos_here(page.url) %}
{% if photos_here | length %}
  <div class="gallery">
    {% for item in photos_here %}
      <figure>
        <a href="{{ item.url }}">
          <img src="{{ item.url }}{{ item.data.photo }}" alt="{{ item.data.title }}" />
          <figcaption>{{ item.data.title }}</figcaption>
        </a>
      </figure>
    {% endfor %}
  </div>
{% endif %}

{% set photos_bellow = collections.photos | photos_bellow(page.url) %}
{% if photos_bellow | length %}
  <div class="gallery">
    {% for item in photos_bellow %}
