---
layout: page
---

{% set breadcrumb = collections.galleries | breadcrumb(page.url) %}
{% if breadcrumb | length %}
  <ul class="breadcrumb">
    {% for item in breadcrumb | sort_by_url_length %}
      <li><a href="{{ item.url }}">{{ item.data.title }}</a></li>
    {% endfor %}
  </ul>
{% endif %}

<h1>{{ title }}</h1>

{{ content | safe }}

{% set sub_galleries = collections.galleries | sub_galleries(page.url) %}
{% if sub_galleries | length %}
  <h2>Galleries</h2>
  <p>You can navigate in these sub galleries to find photos:</p>
  <ul class="galleries">
    {% for item in sub_galleries %}
      <li><a href="{{ item.url }}" class="icon icon--folder">{{ item.data.title }}</a></li>
    {% endfor %}
  </ul>
{% endif %}

{% set photos_here = collections.photos | photos_here(page.url) %}
{% if photos_here | length %}
  <h2>Latest photos in this gallery</h2>
  <div class="gallery">
    {% for item in photos_here %}
      <figure>
        <a href="{{ item.url }}">
          <img src="{{ item.url }}{{ item.data.photo }}" alt="{{ item.data.title }}" />
          <figcaption>{{ item.data.title }}</figcaption>
        </a>
      </figure>
    {% endfor %}
  </div>
{% endif %}

{% set photos_below = collections.photos | photos_below(page.url) %}
{% if photos_below | length %}
  <h2>Latest photos in sub galleries</h2>
  <div class="gallery">
    {% for item in photos_below %}
      <figure>
        <a href="{{ item.url }}">
          <img src="{{ item.url }}{{ item.data.photo }}" alt="{{ item.data.title }}" />
          <figcaption>{{ item.data.title }}</figcaption>
        </a>
      </figure>
    {% endfor %}
  </div>
{% endif %}
